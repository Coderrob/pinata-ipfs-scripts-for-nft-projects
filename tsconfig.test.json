{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-test",
    "rootDir": "./",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts", "src/**/*.spec.ts"],
  "exclude": ["node_modules", "dist", "dist-test", "src/bak"]
}
